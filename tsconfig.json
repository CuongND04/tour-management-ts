{
  "compilerOptions": {
    "outDir": "dist",//biên dich vào thư mục js
    "target": "ES6",// cho phép ts biên dịch sang kiểu es6
    "module": "commonjs", // là tiêu chuẩn được sd trong nodejs để làm việc với module
    "removeComments": true,// xóa comment khi biên dịch sang js
    "esModuleInterop": true, // dùng được từ import thay cho require 
  }
}