extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/moment.pug
block customStyles 
  style.
    .swiper {
      width: 100%;
      height: 100%;
    }

    .swiper-slide {
      text-align: center;
      font-size: 18px;
      background: #fff;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .swiper-slide img {
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }


    .swiper {
      width: 100%;
      height: 300px;
      margin-left: auto;
      margin-right: auto;
    }

    .swiper-slide {
      background-size: cover;
      background-position: center;
    }

    .imagesMain {
      height: 80%;
      width: 100%;
    }

    .imagesThumb {
      height: 20%;
      box-sizing: border-box;
      padding: 10px 0;
    }

    .imagesThumb .swiper-slide {
      width: 25%;
      height: 100%;
      opacity: 0.4;
    }

    .imagesThumb .swiper-slide-thumb-active {
      opacity: 1;
    }

    .swiper-slide img {
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
block main
  .tour-detail
    .container.my-3
      .row
        .col-6
          if(tourDetail.images)
            .inner-images
              div(class="swiper imagesMain")
                div(class="swiper-wrapper")
                  each image in tourDetail.images
                    div(class="swiper-slide")
                      .inner-image
                        img(src=image)
                div(class="swiper-button-next")
                div(class="swiper-button-prev")

              div(class="swiper imagesThumb")
                div(class="swiper-wrapper")
                  each image in tourDetail.images
                    div(class="swiper-slide")
                      .inner-image
                        img(src=image)

        .col-6
          .inner-title #{tourDetail.title}

          .inner-barcode
            <i class="fa-solid fa-barcode"></i> Mã tour: #{tourDetail.code}

          .inner-time-start
            <i class="fa-solid fa-calendar-days"></i> Lịch khởi hành:   
            +formatDateTime(tourDetail.timeStart)

          .inner-stock
            <i class="fa-solid fa-person-walking-luggage"></i> Còn lại: #{tourDetail.stock} chỗ

          .inner-price-special #{tourDetail.price_special.toLocaleString()}đ
          .inner-price #{tourDetail.price.toLocaleString()}đ
          .inner-percent Giảm tới #{tourDetail.discount}%

          form(
            form-add-to-cart
            tour-id=tourDetail.id
          )
            input(
              class="form-control mb-2"
              type="number"
              name="quantity"
              value="1"
              min="1"
              max=tourDetail.stock
            )
            button(
              type="submit"
              class="btn btn-success btn-block"
            ) Thêm vào giỏ hàng


      .row
        .col-12
          .inner-infomation
            .inner-label Thông tin tour
            .inner-text
              | !{tourDetail.information}

        .col-12
          .inner-infomation
            .inner-label Lịch trình tour
            .inner-text
              | !{tourDetail.schedule}