extends ../../layouts/default.pug
include ../../mixins/box-head.pug
block customStyles
  style.
    .custom-row {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      margin-bottom: 30px;
    }

    /* Custom styling for the custom column */
    .custom-col-6 {
      flex: 0 0 48%;
      max-width: 48%;
      margin-bottom: 20px;
    }

    /* Custom styling for the custom card */
    .custom-card {
      border: none;
      border-radius: 12px;
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      overflow: hidden;
      background-color: #fff;
    }

    /* Hover effect for the custom card */
    .custom-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 12px 24px rgba(0, 0, 0, 0.4);
    }

    /* Custom image styling */
    .custom-card img {
      width: auto;
      height: 300px;
      border-bottom: 2px solid #007bff;
    }

    /* Custom card body styling */
    .custom-card-body {
      padding: 20px;
      text-align: center;
    }

    /* Custom card title styling */
    .custom-card-title {
      font-size: 1.5rem;
      font-weight: 700;
      margin-bottom: 15px;
      color: #333;
    }

    /* Custom button styling */
    .custom-btn-primary {
      background-color: #007bff;
      border-color: #007bff;
      color: #fff;
      padding: 12px 25px;
      border-radius: 8px;
      text-decoration: none;
      font-weight: 600;
      transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }

    /* Custom button hover effect */
    .custom-btn-primary:hover {
      background-color: #0056b3;
      border-color: #0056b3;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

block main
  .container.my-3
    .row
      .col-12
        +box-head(pageTitle)

